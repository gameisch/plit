<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag :defaults %>
    <script type="text/javascript">
	function changetxt()
	{
	var x=document.getElementById("txt");
	var y=document.getElementById("micropost_content");
	var str = y.value;
	x.innerHTML="Осталось " + (2000 - str.length) + " символов";

	}
    </script>
  </head>
  <body>
    <div class="container">
     
      <%= render 'layouts/header' %>
     
      <section class="round">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </section>
      <div id="footer">
      <%= render 'layouts/footer' %>
      </div>
    </div>
  </body>
</html>

